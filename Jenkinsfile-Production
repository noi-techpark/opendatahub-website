pipeline {
    agent {
        dockerfile {
            filename 'docker/dockerfile-hugo'
            additionalBuildArgs '--build-arg JENKINS_USER_ID=`id -u jenkins` --build-arg JENKINS_GROUP_ID=`id -g jenkins`'
        }
    }

    environment {
        AWS_ACCESS_KEY_ID = credentials('AWS_ACCESS_KEY_ID')
        AWS_SECRET_ACCESS_KEY = credentials('AWS_SECRET_ACCESS_KEY')
        HUGO_BASEURL ='https://opendatahub.bz.it'
        HUGO_GOOGLEANALYTICS = 'UA-138331709-1'
        MAIL_CLIENT = 'https://mailclient.opendatahub.bz.it/contact'
    }

    stages {
        stage('Configure') {
            steps {
                sh "sed -i 's/UA-XXXXXXXX-1/${HUGO_GOOGLEANALYTICS}/g' src/themes/odh-fbe/static/js/cookie.js"
                sh "sed -i 's/https://example.com/${MAIL_CLIENT}/g' src/themes/odh-fbe/static/js/main.js"
            }
        }
        stage('Build') {
            steps {
                sh 'hugo -s src -d ../target'
            }
        }
        stage('Upload') {
            steps {
                s3Upload(bucket: 'it.bz.geobank', acl: 'PublicRead', file: './target')
            }
        }
    }
}
